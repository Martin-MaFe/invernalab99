@page "/formLogin"
@layout LandingPageLayout
@inject HttpClient httpClient




<div class="flex justify-center items-center  min-h-screen">

    <img class="rounded-lg -translate-y-2" src="./assets/login.jpg" alt="Descripción de la imagen" width="450" height="550">


    <form class="bg-neutral-950 shadow-md rounded px-8 pt-6 pb-8 mb-4 w-full sm:max-w-3xl">


        <h2 class="text-center block text-white-700 font-base  mb-40 ">Invernalab </h2>


        <div class="flex flex-col gap-7">


            <div>
                <label for="user" class="block text-white-700 font-base text-xl mb-2">Usuario:</label>
                <input type="text" id="user" class="shadow appearance-none border border border-neutral-500 bg-[#181818] rounded-lg w-full w-[450px] h-[64px] pl-4 mb-2 text-white leading-tight focus:outline-none focus:shadow-outline" placeholder="Nombre de Usuario ">
            </div>

            <div>
                <label for="password" class="block text-white-700 font-base text-xl mb-2">Contraseña:</label>
                <input type="text" id="password" class="shadow appearance-none border border-neutral-500 bg-[#181818] rounded-lg w-[450px] h-[64px] pl-4 mb-6 text-white leading-tight focus:outline-none focus:shadow-outline" placeholder="**********************">
            </div>


         
            <div class="flex justify-center flex-col items-center  mx-2 col-span-2">

                <button class=" w-full py-5  bg-[#32C06B] rounded-lg hover:bg-white hover:text-black transition-all font-semibold">
                    Iniciar
                </button>

                
                <span class="mt-16 ">¿Aun no tienes una cuenta?<a class="ml-2 text-[#32C06B]" href="#">Registrar</a></span>


            </div>
        </div>
    </form>
</div>

